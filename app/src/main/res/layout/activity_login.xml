<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAutofill="no"
    tools:context=".LoginActivity"
    android:background="@color/bg_color"
    >


    <ImageView
        android:layout_width="360dp"
        android:layout_height="476dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="348dp"
        android:background="@drawable/two_cricle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="397dp"
        android:layout_height="52dp"
        android:text="Log In to Rental!"
        android:textStyle="bold"
        android:textFontWeight="800"
        android:textAlignment="center"

        android:textSize="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="325dp"
        android:layout_height="56dp"
        android:background="@drawable/edit_input_box"
        android:hint="Username or Email"
        android:padding="14dp"
        android:textColor="#8c8c8c"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.398" />

    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="325dp"
        android:layout_height="56dp"
        android:background="@drawable/edit_input_box"
        android:hint="Password"
        android:padding="14dp"
        android:textColor="#8c8c8c"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        app:layout_constraintVertical_bias="0.36" />
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log IN"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852"
        />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="302dp"
        android:layout_height="28dp"
        android:text="Forgot Password?"
        android:textSize="50px"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/button_color"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPass"
        app:layout_constraintVertical_bias="0.77" />

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="198dp"
        android:layout_height="28dp"
        android:text="Don't have an account?"
        android:textAlignment="center"
        android:textSize="40px"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/SignUP"
        android:layout_width="98dp"
        android:layout_height="27dp"
        android:text="Sign Up"
        android:textColor="@color/button_color"
        android:textSize="40px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/signUpText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/signUpText"
        app:layout_constraintTop_toTopOf="@+id/signUpText"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>